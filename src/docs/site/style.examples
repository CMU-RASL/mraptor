/* Following styles are for the tabs sometimes used to organize large
 * forms (e.g. 'Families') */

#navlist {
	padding: 3px 0;
	margin-left: 0;
	border-bottom: 1px solid #070707;
	font: bold 12px Arial, sans-serif;
}
#navlist li {
	list-style: none;
	margin: 0;
	display: inline;
}

#navlist li a, #navlist li a.normal {
	padding: 2px 0.5em 3px 0.5em;
	margin-left: 3px;
	border: 1px solid #070707;
	border-bottom: none;
	background: #CBD6E1;
	text-decoration: none;
}

#navlist li a:link { color: #1d1d65; }
#navlist li a:visited { color: #1d1d65; }

#navlist li a:hover {
	color: #000;
	background: #608DB7;
	border-color: #020207;
}

#navlist li a.current {
	background: white;
	border-bottom: 1px solid white;
}

